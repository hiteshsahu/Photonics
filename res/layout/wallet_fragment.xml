<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/material_bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/change_account_no_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:text="Change Card"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/ll_Profile1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/visa_card"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_weight="8"
                android:background="@drawable/rounder_rectangle_visa_card" >

                <ImageView
                    android:id="@+id/card_icon"
                    android:layout_width="35dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="false"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/mastercard" />

                <TextView
                    android:id="@+id/dummy"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="15dp"
                    android:layout_marginRight="15dp"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/card_exp_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/dummy"
                    android:layout_alignBottom="@+id/dummy"
                    android:layout_toLeftOf="@+id/dummy"
                    android:text="02/15"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/card_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/card_exp_date"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="4266 4415 2277 5377"
                    android:textSize="15sp" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:visibility="visible" >

            <CheckBox
                android:id="@+id/card_expires_switch"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/card_edxpires_label"
                android:layout_marginRight="48dp"
                android:checked="true" />

            <TextView
                android:id="@+id/card_edxpires_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:layout_marginLeft="25dp"
                android:text="Set as default"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_weight="8"
                android:background="@drawable/rounder_rectangle_visa_card" >

                <ImageView
                    android:id="@+id/card_icon_visa"
                    android:layout_width="35dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="false"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/visa" />

                <TextView
                    android:id="@+id/dummy_visa"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="15dp"
                    android:layout_marginRight="15dp"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/card_exp_date_visa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/dummy_visa"
                    android:layout_alignBottom="@+id/dummy_visa"
                    android:layout_toLeftOf="@+id/dummy_visa"
                    android:text="02/15"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/card_no_visa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/card_exp_date_visa"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="4266 4415 2277 5377"
                    android:textSize="15sp" />
            </RelativeLayout>
        </LinearLayout>


        <Button
            android:id="@+id/btn_delete_card"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="30dp"
            android:background="@drawable/g_plus_button"
            android:paddingBottom="5dp"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:paddingTop="5dp"
            android:text="Delete Card"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>

</ScrollView>